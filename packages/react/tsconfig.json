{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "target": "es2020",
    "strict": true,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@snapdrag/core/*": ["../core/src/*"]
    },
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "src/core", "src/plugins"]
}
